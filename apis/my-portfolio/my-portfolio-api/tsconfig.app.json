{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "esModuleInterop": true,
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "types": ["node", "express"]
  },
  "include": ["src/**/*.ts", "../../../libs/**/*/src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../../libs/react-components/**/*",
    "../../../libs/**/*/src/tests/**/*.ts"
  ]
}
