{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "express"],
    "esModuleInterop": true,
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext"
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../libs/**/*.spec.ts",
    "../../libs/**/*.test.ts",
    "../../libs/**/*.jest.config.ts",
    "../../libs/react-components/**/*.ts"
  ],
  "include": ["../../libs/**/*.ts", "src/**/*.ts"]
}
