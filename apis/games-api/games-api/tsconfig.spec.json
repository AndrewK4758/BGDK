{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "../../../dist/out-tsc",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "../../../__mocks__/mocks.ts",
    "../../../libs/**/*/src/**/*.ts"
  ],
  "exclude": [
    "../../../libs/react-components/**/*",
    "../../../libs/shared-react-components/**/*",
    "../../../libs/**/*/src/tests/**/*.ts"
  ]
}
