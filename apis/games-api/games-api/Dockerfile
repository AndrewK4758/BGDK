# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build games-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t games-api`.
FROM docker.io/node:22.6.0-bookworm

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"

# Enable Corepack and install pnpm
RUN corepack enable
RUN corepack prepare pnpm@latest --activate

ENV HOST=localhost
ENV PORT=3000
ENV NODE_ENV=production

WORKDIR /app

COPY package*.json ./

RUN pnpm install

COPY libs/prisma prisma/

WORKDIR /app/prisma/

RUN pnpx prisma generate

WORKDIR /app

COPY dist/apis/games-api games-api/

EXPOSE 3000

CMD [ "node", "games-api/main.js" ]
