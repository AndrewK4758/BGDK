{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "composite": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "../../libs/**/*.ts",
    "src/services/swagger/swagger-setup.ts",
    "src/main.ts"
  ],
  "exclude": [
    "../../libs/react-components/**/*.ts",
    "../../libs/**/*.spec.ts",
    "../../libs/**/*.test.ts",
    "../../libs/**/*.jest.config.ts",
    "../../libs/**/*.json",
    "../../libs/**/*.md"
  ]
}
