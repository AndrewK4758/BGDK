{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "composite": true,
    "declarationMap": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "../libs/**/*.spec.ts",
    "../libs/**/*.test.ts"
  ]
}
