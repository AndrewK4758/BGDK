{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "esModuleInterop": true,
    "composite": true,
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "../../../libs/**/*/src/**/*.ts",
    "../../../__mocks__/**/*.ts"
  ],
  "exclude": [
    "../../../libs/react-components/**/*",
    "../../../libs/shared-react-components/**/*",
    "../../../libs/**/*/src/tests/**/*.ts"
  ]
}
