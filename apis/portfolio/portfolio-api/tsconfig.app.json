{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "types": ["node", "express"],
    "strict": false
  },
  "include": ["src/**/*.ts", "../../../libs/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../../libs/react-components/**/*.ts",
    "../../../libs/react-components/**/*.tsx",
    "../../../libs/shared-react-components/**/*.ts",
    "../../../libs/shared-react-components/**/*.tsx",
    "../../../libs/**/*.spec.ts",
    "../../../libs/**/*/.spec.tsx",
    "../../../libs/**/*.test.ts",
    "../../../libs/**/*/.test.tsx"
  ]
}
