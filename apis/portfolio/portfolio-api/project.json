{
  "name": "portfolio-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apis/portfolio/portfolio-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "esbuildConfig": "apis/portfolio/portfolio-api/esbuild.config.cjs",
        "main": "apis/portfolio/portfolio-api/src/main.ts",
        "outputPath": "apis/portfolio-api/portfolio-api/dist",
        "outputFileName": "main.js",
        "tsConfig": "apis/portfolio/portfolio-api/tsconfig.app.json",
        "assets": [],
        "sourcemap": "linked",
        "target": "node23",
        "platform": "node",
        "format": ["esm", "cjs"],
        "bundle": true
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "portfolio-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "portfolio-api:build:development",
          "watch": true
        },
        "production": {
          "buildTarget": "portfolio-api:build:production",
          "watch": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apis/portfolio/portfolio-api/jest.config.ts",
        "reportsDirectory": "../../../coverage/libs/portfolio-api",
        "testFiles": ["./src/tests/*"]
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apis/portfolio/portfolio-api/Dockerfile . -t portfolio-api"
    }
  }
}
