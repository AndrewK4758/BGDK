{
  "name": "vertex-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apis/vertex-api/vertex-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "esbuildConfig": "apis/vertex-api/vertex-api/esbuild.config.cjs",
        "main": "apis/vertex-api/vertex-api/src/main.ts",
        "outputPath": "apis/vertex-api/vertex-api/dist",
        "outputFileName": "main.js",
        "tsConfig": "apis/vertex-api/vertex-api/tsconfig.app.json",
        "assets": [],
        "sourcemap": "linked",
        "target": "node23",
        "format": ["esm", "cjs"],
        "platform": "node",
        "bundle": true,
        "loader": {
          ".node": "empty"
        },
        "external": ["node-pty"]
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "vertex-api:build",
        "runtimeArgs": ["--trace-deprecation"]
      },
      "configurations": {
        "development": {
          "buildTarget": "vertex-api:build:development"
        },
        "production": {
          "buildTarget": "vertex-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "configurations": {
        "development": {
          "fix": true
        },
        "production": {
          "fix": false
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apis/vertex-api/vertex-api/jest.config.ts",
        "reportsDirectory": "../../coverage/libs/vertex-api",
        "testFiles": ["./src/tests/*"]
      }
    }
  }
}
