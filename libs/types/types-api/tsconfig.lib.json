{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "types": ["node", "vite/client"],
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext"
  },
  "include": [
    "src/**/*.ts",
    "../../models/all-games-map/src/**/*.ts",
    "../../models/instance-of-game/src/**/*.ts",
    "../../models/game-builder/src/**/*.ts",
    "../../models/rule/src/**/*.ts",
    "../../game/src/**/*.ts",
    "../../games/**/*/src/**/*.ts",
    "../types-game/src/**/*.ts",
    "../../games-components-logic/src/**/*.ts",
    "../../chain/src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../models/game-builder/src/tests/**/*.ts",
    "../../models/rule/src/tests/**/*.ts",
    "../../models/all-games-map/src/tests/**/*.ts",
    "../../models/instance-of-game/src/tests/**/*.ts",
    "../../game/src/tests/**/*.ts",
    "../../games/**/*/src/tests/**/*.ts",
    "../types-game/src/tests/**/*.ts",
    "../../games-components-logic/src/tests/**/*.ts",
    "../../chain/src/tests/**/*.ts"
  ],
  "references": [
    { "path": "../../models/rule/tsconfig.lib.json" },
    { "path": "../../models/game-builder/tsconfig.lib.json" },
    { "path": "../../chain/tsconfig.lib.json" },
    { "path": "../../games/tic-tac-toe/tsconfig.lib.json" },
    { "path": "../../games-components-logic/tsconfig.lib.json" },
    { "path": "../../games/chutes-and-ladders/tsconfig.lib.json" },
    { "path": "../../game/tsconfig.lib.json" },
    { "path": "../../models/instance-of-game/tsconfig.lib.json" },
    { "path": "../../models/all-games-map/tsconfig.lib.json" },
    { "path": "../types-game/tsconfig.lib.json" }
  ]
}
