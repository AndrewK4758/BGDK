{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "composite": true,
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "../react-components/src/**/*.ts",
    "../react-components/src/**/*.tsx",
    "../react-components/src/**/*.ts",
    "../react-components/src/**/*.tsx",
    "../chain/src/**/*.ts",
    "../games/**/*/src/**/*.ts",
    "../models/**/*/src/**/*.ts",
    "../types/**/*/src/**/*.ts",
    "../games-components-logic/src/**/*.ts",
    "../game/src/**/*.ts"
  ],
  "exclude": [
    "../libs/react-components/src/tests/**/*.ts",
    "../libs/react-components/src/tests/**/*.tsx",
    "../chain/src/tests/**/*.ts",
    "../games/**/*/src/tests/**/*.ts",
    "../models/**/*/src/tests/**/*.ts",
    "../types/**/*/src/tests/**/*.ts",
    "../games-components-logic/src/tests/**/*.ts",
    "../game/src/tests/**/*.ts"
  ]
}
