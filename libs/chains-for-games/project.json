{
  "name": "chains-for-games",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/chains-for-games/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{workspaceRoot}/dist/{projectRoot}",
        "main": "libs/chains-for-games/src/index.ts",
        "tsConfig": "libs/chains-for-games/tsconfig.lib.json",
        "assets": ["libs/chains-for-games/*.md"],
        "configFile": "libs/chains-for-games/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/chains-for-games/jest.config.ts",
        "reportsDirectory": "../../coverage/libs/chains-for-games",
        "testFiles": ["./src/tests/*"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true
      }
    },
    "typecheck": {
      "cache": true,
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "options": {
        "cwd": "libs/chains-for-games/",
        "command": "tsc --noEmit -p tsconfig.lib.json"
      },
      "metadata": {
        "description": "Run Typechecking",
        "help": {
          "command": "pnpm exec tsc --help -p tsconfig.lib.json",
          "example": {
            "options": {
              "noEmit": true
            }
          }
        }
      },
      "executor": "nx:run-commands",
      "configurations": {},
      "parallelism": true
    }
  }
}
