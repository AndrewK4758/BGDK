{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "composite": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts",
    "../../__mocks__/**/*.ts",
    "../../libs/**/*.spec.ts",
    "../../libs/**/*.test.ts"
  ],
  "exclude": ["../../libs/react-components/**/*.ts"]
}
