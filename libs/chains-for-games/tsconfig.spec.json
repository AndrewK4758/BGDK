{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.js",
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../../libs/**/*/src/**/*.ts",
    "../../__mocks__/mocks.ts"
  ],

  "exclude": [
    "../../../libs/react-components/**/*.ts",
    "../../../libs/react-components/**/*.tsx",
    "../../../libs/shared-react-components/**/*.ts",
    "../../../libs/shared-react-components/**/*.tsx",
    "../../../libs/**/*.spec.ts",
    "../../../libs/**/*/.spec.tsx",
    "../../../libs/**/*.test.ts",
    "../../../libs/**/*/.test.tsx"
  ]
}
