{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node"
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts",
    "__mocks__/*.ts"
  ]
}
