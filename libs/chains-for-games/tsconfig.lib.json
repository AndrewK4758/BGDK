{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext"
  },

  "include": [
    "src/**/*.ts",
    "../games/tic-tac-toe/src/**/*.ts",
    "../games-components-logic/src/**/*.ts",
    "../types/types-game/src/**/*.ts",
    "../games/chutes-and-ladders/src/**/*.ts",
    "../game/src/**/*.ts",
    "../models/instance-of-game/src/**/*.ts",
    "../models/de-referencing-utilities/src/**/*.ts",
    "../chain/src/**/*.ts"
  ],

  "exclude": [
    "jest.config.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],

  "references": [
    { "path": "../games/chutes-and-ladders/tsconfig.lib.json" },
    { "path": "../games/tic-tac-toe/tsconfig.lib.json" },
    { "path": "../games-components-logic/tsconfig.lib.json" },
    { "path": "../types/types-game/tsconfig.lib.json" },
    { "path": "../game/tsconfig.lib.json" },
    { "path": "../models/instance-of-game/tsconfig.lib.json" },
    { "path": "../models/de-referencing-utilities/tsconfig.lib.json" },
    { "path": "../chain/tsconfig.lib.json" }
  ]
}
