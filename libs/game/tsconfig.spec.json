{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "NodeNext",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "composite": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts",
    "../games/tic-tac-toe/src/**/*.ts",
    "../games/chutes-and-ladders/src/**/*.ts",
    "../games-components-logic/src/**/*.ts",
    "../types/types-game/src/**/*.ts"
  ],
  "exclude": [
    "../games/tic-tac-toe/src/tests/**/*.ts",
    "../games/chutes-and-ladders/src/tests/**/*.ts",
    "../games-components-logic/src/tests/**/*.ts",
    "../types/types-game/src/tests/**/*.ts"
  ]
}
