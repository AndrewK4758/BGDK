{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "composite": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext"
  },
  "include": ["src/**/*.ts", "../types/types-game/**/*.ts", "../game-components-logic/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../libs/**/*.spec.ts",
    "../../libs/**/*.test.ts"
  ]
}
