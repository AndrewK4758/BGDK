{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "outDir": "../../dist/out-tsc",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "composite": true,
    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "../../libs/**/*.spec.ts",
    "../../libs/**/*.test.ts"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx", "src/**/*.css", "../../libs/**/*.ts"]
}
