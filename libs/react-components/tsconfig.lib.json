{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client", "jest"],
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.css",
    "src/**/*.d.ts",
    "../games-components-logic/src/**/*.ts",
    "../types/**/*/src/**/*.ts",
    "../shared-react-components/src/**/*.ts",
    "../shared-react-components/src/**/*.tsx",
    "../gen-ai/vertex-ai/src/**/*.ts"
  ],
  "exclude": [
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "vite.config.ts",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "references": [
    { "path": "../types/types-ai/tsconfig.lib.json" },
    { "path": "../gen-ai/vertex-ai/tsconfig.lib.json" },
    { "path": "../shared-react-components/tsconfig.lib.json" },
    { "path": "../types/types-api/tsconfig.lib.json" },
    { "path": "../types/types-game/tsconfig.lib.json" }
  ]
}
