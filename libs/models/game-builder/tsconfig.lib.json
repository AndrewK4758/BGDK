  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*.ts",
    "../rule/src/**/*.ts",
    "../../chain/src/**/*.ts",
    "../../games/chutes-and-ladders/src/**/*.ts",
    "../../games-components-logic/src/**/*.ts",
