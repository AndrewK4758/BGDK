{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "composite": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts",
    "../../../libs/**/*jest.config.ts",
    "../../../libs/**/*.spec.ts",
    "../../../libs/**/*.test.ts"
  ],
  "exclude": ["../../react-components/**/*.ts"]
}
