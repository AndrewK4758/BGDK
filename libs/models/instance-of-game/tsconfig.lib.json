{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "composite": true
  },
  "include": [
    "src/**/*.ts",
    "../../game/**/*.ts",
    "../../chutes-and-ladders/**/*.ts",
    "../../types/types-game/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../../libs/**/*jest.config.ts",
    "../../../libs/**/*.spec.ts",
    "../../../libs/**/*.test.ts"
  ]
}
