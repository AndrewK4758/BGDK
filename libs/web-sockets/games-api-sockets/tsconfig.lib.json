{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "composite": true
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../../libs/**/*.spec.ts",
    "../../../libs/**/*.test.ts",
    "../../../libs/**/*.jest.config.ts",
    "../../../libs/react-components/**/*.ts"
  ],
  "include": ["src/**/*.ts", "../../../libs/**/*.ts"]
}
