{
  "name": "data-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/data-ui/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "outputPath": "apps/data-ui/dist"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "data-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "data-ui:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "data-ui:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "data-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "data-ui:build:development"
        },
        "production": {
          "buildTarget": "data-ui:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "apps/data-ui/vite.config.mts"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true,
        "lintFilePatterns": ["apps/data-ui/**/*.{ts,tsx,js,jsx}", "apps/data-ui/package.json"]
      }
    }
  }
}
