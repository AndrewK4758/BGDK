{
  "name": "portfolio",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/portfolio/portfolio/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "outputs": ["{workspaceRoot}/dist/apps/portfolio"],
      "defaultConfiguration": "development",
      "options": {
        "command": "vite build ./apps/portfolio/portfolio",
        "color": true
      },
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["vite"]
        }
      ],
      "metadata": {
        "technologies": ["vite"],
        "description": "Run Vite build",
        "help": {
          "command": "pnpm exec vite build --help",
          "example": {
            "options": {
              "sourcemap": true,
              "manifest": "manifest.json"
            }
          }
        }
      },
      "executor": "nx:run-commands",
      "configurations": {},
      "parallelism": true
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "portfolio:build",
        "open": false,
        "verbose": true
      },
      "configurations": {
        "development": {
          "buildTarget": "portfolio:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "portfolio:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "dependsOn": ["build"],
      "options": {
        "cwd": "apps/portfolio/portfolio",
        "command": "vite preview"
      },
      "metadata": {
        "technologies": ["vite"],
        "description": "Locally preview Vite production build",
        "help": {
          "command": "pnpm exec vite preview --help",
          "example": {
            "options": {
              "port": 4800
            }
          }
        }
      },
      "executor": "nx:run-commands",
      "configurations": {},
      "parallelism": true
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "apps/portfolio/portfolio/vite.config.mts",
        "reportsDirectory": "../../../coverage/apps/portfolio/portfolio"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": true,
        "color": true
      }
    },

    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./apps/portfolio/portfolio",
        "commands": [{ "command": "gcloud app deploy website.yaml --quiet" }]
      }
    },
    "serve-server": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",

      "options": {
        "cwd": "apps/portfolio/portfolio",
        "command": "node ./dist/server/server.mjs"
      }
    }
  }
}
