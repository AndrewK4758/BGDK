{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["jest", "node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts"],
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "composite": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    "../../../libs/shared-react-components/src/**/*.tsx",
    "../../../libs/shared-react-components/src/**/*.ts"
  ],
  "exclude": [
    "../../../libs/shared-react-components/src/tests/**/*.tsx",
    "../../../libs/shared-react-components/src/tests/**/*.ts"
  ]
}
