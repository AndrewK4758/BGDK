{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": false,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.AsyncIterable", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": false,
    "skipDefaultLibCheck": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@bgdk/all-games-map": ["libs/models/all-games-map/src/index.ts"],
      "@bgdk/chain": ["libs/chain/src/index.ts"],
      "@bgdk/chains-for-games": ["libs/chains-for-games/src/index.ts"],
      "@bgdk/chutes-and-ladders": ["libs/games/chutes-and-ladders/src/index.ts"],
      "@bgdk/client": ["libs/socket-io/client/src/index.ts"],
      "@bgdk/game": ["libs/game/src/index.ts"],
      "@bgdk/game-builder": ["libs/models/game-builder/src/index.ts"],
      "@bgdk/games-components-logic": ["libs/games-components-logic/src/index.ts"],
      "@bgdk/instance-of-game": ["libs/models/instance-of-game/src/index.ts"],
      "@bgdk/media-recorder": ["libs/media-recorder/src/index.ts"],
      "@bgdk/mocks": ["libs/mocks/src/index.ts"],
      "@bgdk/password": ["libs/password/src/index.ts"],
      "@bgdk/prisma": ["libs/prisma/src/index.ts"],
      "@bgdk/prompt-builder": ["libs/gen-ai/prompt-builder/src/index.ts"],
      "@bgdk/react-components": ["libs/react-components/src/index.ts"],
      "@bgdk/rule": ["libs/models/rule/src/index.ts"],
      "@bgdk/server": ["server/server/src/index.ts"],
      "@bgdk/shared-react-components": ["libs/shared-react-components/src/index.ts"],
      "@bgdk/socket-io-client": ["libs/socket-io/client/src/index.ts"],
      "@bgdk/socket-io-server": ["libs/socket-io/server/src/index.ts"],
      "@bgdk/tic-tac-toe": ["libs/games/tic-tac-toe/src/index.ts"],
      "@bgdk/types-ai": ["libs/types/types-ai/src/index.ts"],
      "@bgdk/types-api": ["libs/types/types-api/src/index.ts"],
      "@bgdk/types-game": ["libs/types/types-game/src/index.ts"],
      "@bgdk/utils": ["libs/utils/src/index.ts"],
      "@bgdk/vertex-ai": ["libs/gen-ai/vertex-ai/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
