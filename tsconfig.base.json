{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bgdk/all-games-map": ["libs/models/all-games-map/src/index.ts"],
      "@bgdk/chain": ["libs/chain/src/index.ts"],
      "@bgdk/chains-for-games": ["libs/chains-for-games/src/index.ts"],
      "@bgdk/chutes-and-ladders": ["libs/games/chutes-and-ladders/src/index.ts"],
      "@bgdk/de-referencing-utilities": ["libs/models/de-referencing-utilities/src/index.ts"],
      "@bgdk/game": ["libs/game/src/index.ts"],
      "@bgdk/game-builder": ["libs/models/game-builder/src/index.ts"],
      "@bgdk/games-components-logic": ["libs/games-components-logic/src/index.ts"],
      "@bgdk/instance-of-game": ["libs/models/instance-of-game/src/index.ts"],
      "@bgdk/password": ["libs/password/src/index.ts"],
      "@bgdk/prisma": ["libs/prisma/src/index.ts"],
      "@bgdk/react-components": ["libs/react-components/src/index.ts"],
      "@bgdk/rule": ["libs/models/rule/src/index.ts"],
      "@bgdk/tic-tac-toe": ["libs/games/tic-tac-toe/src/index.ts"],
      "@bgdk/types-api": ["libs/types/types-api/src/index.ts"],
      "@bgdk/types-game": ["libs/types/types-game/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
